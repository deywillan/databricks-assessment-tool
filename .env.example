# Databricks Connection
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapi...

# Databricks Model Serving Endpoint (for AI Agents)
DATABRICKS_ENDPOINT=/serving-endpoints/databricks-gpt-oss-120b/invocations

# Application Ports (optional - defaults shown below)
BACKEND_PORT=8002
FRONTEND_PORT=3002

# Logging (optional)
LOG_LEVEL=INFO
DEBUG_MODE=False

# Project Paths (optional - adjust only if needed, defaults are recommended)
# PROJECT_ROOT will be automatically detected
# TF_FILES_DIR=${PROJECT_ROOT}/databricks_tf_files
# OUTPUT_DIR=${PROJECT_ROOT}/output_summary_agent
# UCX_DIR=${PROJECT_ROOT}/ucx_export

# AI Agents to run by default (comma-separated)
# Options: terraform_reader,ucx_analyst, report_generator
SELECTED_AGENTS=terraform_reader,ucx_analyst,report_generator
